{
    "title": "aifusenno1 Personal Setting",
    "rules": [
    {
        "description": "CAPS_LOCK + hjkl to arrow keys (w/ modifier), to contrl when pressed with any other, to ESC when alone.",
        "manipulators": [
            {
                "type": "basic",
                "from": {
                    "key_code": "j",
                    "modifiers": {
                        "mandatory": [
                            "left_control"
                        ],
                        "optional": [
                            "left_shift",
                            "left_option",
                            "left_command"
                        ]
                    }
                },
                "to": [{
                    "key_code": "down_arrow"
                }],
                "conditions": [{
                    "type": "variable_if",
                    "name": "caps_lock pressed",
                    "value": 1
                }]
            },
            {
                "type": "basic",
                "from": {
                    "key_code": "k",
                    "modifiers": {
                        "mandatory": [
                            "left_control"
                        ],
                        "optional": [
                            "left_shift",
                            "left_option",
                            "left_command"
                        ]
                    }
                },
                "to": [{
                    "key_code": "up_arrow"
                }],
                "conditions": [{
                    "type": "variable_if",
                    "name": "caps_lock pressed",
                    "value": 1
                }]
            },
            {
                "type": "basic",
                "from": {
                    "key_code": "h",
                    "modifiers": {
                        "mandatory": [
                            "left_control"
                        ],
                        "optional": [
                            "left_shift",
                            "left_option",
                            "left_command"
                        ]

                    }
                },
                "to": [{
                    "key_code": "left_arrow"
                }],
                "conditions": [{
                    "type": "variable_if",
                    "name": "caps_lock pressed",
                    "value": 1
                }]
            },
            {
                "type": "basic",
                "from": {
                    "key_code": "l",
                    "modifiers": {
                        "mandatory": [
                            "left_control"
                        ],
                        "optional": [
                            "left_shift",
                            "left_option",
                            "left_command"
                        ]
                    }
                },
                "to": [{
                    "key_code": "right_arrow"
                }],
                "conditions": [{
                    "type": "variable_if",
                    "name": "caps_lock pressed",
                    "value": 1
                }]
            },
            {
                "type": "basic",
                "from": {
                    "key_code": "caps_lock",
                    "modifiers": {
                        "optional": [
                            "any"
                        ]
                    }
                },
                "to": [
                    {
                        "set_variable": {
                            "name": "caps_lock pressed",
                            "value": 1
                        }
                    },
                    {
                        "key_code": "left_control"
                    }
                ],
                "to_if_alone": [{
                    "key_code": "escape"
                }],
                "to_after_key_up": [{
                    "set_variable": {
                        "name": "caps_lock pressed",
                        "value": 0
                    }
                }]
            }
        ]
    },
        {
            "description": "ESC changed to CAPS_LOCK if held down",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "escape",
                        "modifiers": {
                            "optional": ["any"]
                        }
                    },
                    "parameters": {
                        "basic.to_if_alone_timeout_milliseconds": 250,
                        "basic.to_if_held_down_threshold_milliseconds": 250
                    },
                    "to_if_alone": [
                        {
                            "key_code": "escape"
                        }
                    ],
                    "to_if_held_down": [
                        {
                            "key_code": "caps_lock"
                        }
                    ]
                }
            ]
        }
    ]
}
